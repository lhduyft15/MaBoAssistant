<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AddRoomActivity">

        <LinearLayout android:layout_width="match_parent"
                      android:gravity="center"
                      android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/ivRoomBackground"
                    android:layout_width="370dp"
                    android:layout_height="200dp"/>

        </LinearLayout>

        <TextView android:layout_width="wrap_content"
                  android:text="Room :"
                  android:textSize="17sp"
                  android:textColor="@color/textApp"
                  android:layout_marginLeft="25dp"
                  android:layout_marginTop="20dp"
                  android:layout_height="wrap_content"/>

        <Spinner
                android:id="@+id/spRoom"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="6dp"
                android:layout_width="200dp"
                android:inputType="text"
                android:textColor="@color/textApp"
                android:layout_height="40dp">

        </Spinner>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">

            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Device 1 :"
                          android:textSize="17sp"
                          android:textColor="@color/textApp"
                          android:layout_marginLeft="25dp"
                          android:layout_marginTop="20dp"
                          android:layout_height="wrap_content"/>

                <Spinner
                        android:id="@+id/spDevice1"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="6dp"
                        android:layout_width="200dp"
                        android:inputType="text"
                        android:textColor="@color/textApp"
                        android:layout_height="40dp">
                </Spinner>
            </LinearLayout>

            <ImageView
                    android:id="@+id/ivDevice1"
                    android:layout_width="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_height="55dp"/>

        </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">

        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="Device 2 :"
                      android:textSize="17sp"
                      android:textColor="@color/textApp"
                      android:layout_marginLeft="25dp"
                      android:layout_marginTop="20dp"
                      android:layout_height="wrap_content"/>

            <Spinner
                    android:id="@+id/spDevice2"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="200dp"
                    android:inputType="text"
                    android:textColor="@color/textApp"
                    android:layout_height="40dp">
            </Spinner>
        </LinearLayout>

        <ImageView
                android:id="@+id/ivDevice2"
                android:layout_width="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_height="55dp"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginTop="30dp"
                  android:gravity="center"
                  android:layout_height="wrap_content">

        <Button android:layout_width="250dp"
                android:text="S U B M I T"
                android:id="@+id/btnSubmit"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_rounded_primary"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>