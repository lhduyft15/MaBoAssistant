<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".PhoneActivity">



    <RelativeLayout android:layout_width="250dp"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_height="250dp">

        <ImageView
                android:layout_width="314dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/chatmabo"
                android:id="@+id/imageView5"/>
        <TextView
                android:text="Please press mic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="30dp"
                android:layout_alignLeft="@+id/imageView5"
                android:layout_alignRight="@+id/imageView5"
                android:textSize="15sp"
        />

        <TextView
                android:text="to call with me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="50dp"
                android:layout_alignLeft="@+id/imageView5"
                android:layout_alignRight="@+id/imageView5"
                android:textSize="15sp"
        />


        <ImageView
                android:layout_width="60dp"
                android:layout_height="63dp"
                app:srcCompat="@drawable/panda"
                android:id="@+id/imageView"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="40dp"
        />
    </RelativeLayout>

    <RelativeLayout android:layout_width="250dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="150dp"
                    android:layout_height="250dp">

        <ImageView
                android:layout_width="314dp"
                android:id="@+id/ivChatUser"
                android:layout_height="130dp"
                app:srcCompat="@drawable/chatuser"
                />
        <TextView
                android:text="Please press mic"
                android:id="@+id/tvCommand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="40dp"
                android:layout_alignLeft="@+id/ivChatUser"
                android:layout_alignRight="@+id/ivChatUser"
                android:textSize="15sp"
        />

        <ImageView
                android:layout_width="60dp"
                android:layout_height="63dp"
                app:srcCompat="@drawable/talent"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="140dp"
        />
    </RelativeLayout>

    <ImageButton
            android:id="@+id/voiceBtn"
            android:background="@null"
            android:src="@drawable/microphone"
            android:scaleType="fitCenter"
            android:layout_width="91dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            />

</LinearLayout>